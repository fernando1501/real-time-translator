{
  "name": "real-time-translator",
  "version": "0.1.0",
  "private": true,
  "repository": {
    "type": "git",
    "url": "https://github.com/fernando1501/real-time-translator"
  },
  "dependencies": {
    "@electron/remote": "^2.0.10",
    "@emotion/memoize": "^0.8.1",
    "@testing-library/jest-dom": "^5.16.5",
    "@testing-library/react": "^13.4.0",
    "@testing-library/user-event": "^13.5.0",
    "@vitalets/google-translate-api": "^9.2.0",
    "axios": "^1.4.0",
    "concurrently": "^8.1.0",
    "cors": "^2.8.5",
    "electron-is-dev": "^2.0.0",
    "electron-json-storage": "^4.6.0",
    "electron-reload": "^2.0.0-alpha.1",
    "electron-updater": "^5.3.0",
    "express": "^4.18.2",
    "nodemon": "^2.0.22",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-router-dom": "^6.11.1",
    "react-scripts": "5.0.1",
    "socket.io": "^4.6.2",
    "socket.io-client": "^4.6.2",
    "styled-components": "^5.3.10",
    "update-electron-app": "^2.0.1",
    "wait-on": "^7.0.1",
    "web-vitals": "^2.1.4"
  },
  "main": "electron/main.js",
  "scripts": {
    "start": "react-scripts start",
    "build": "react-scripts build",
    "test": "react-scripts test",
    "eject": "react-scripts eject",
    "build:react:electron:win": "set PUBLIC_URL=./&& react-scripts build",
    "build:react:electron:mac": "export PUBLIC_URL=\"./\"&& react-scripts build",
    "electron:only": "export $(cat .electron.env | xargs) && electron .",
    "electron:start": "concurrently \"npm start\" \"wait-on http://localhost:3000 && npm run electron:only\"",
    "electron:build": "electron-builder -c.extraMetadata.main=electron/main.js",
    "electron:build:publish": "electron-builder -c.extraMetadata.main=electron/main.js --publish always",
    "electron:prebuild:win": "set PUBLIC_URL=./&& copy .\\bin\\index.js .\\node_modules\\appium\\node_modules\\io.appium.settings\\index.js && copy .\\node_modules\\appium\\node_modules\\io.appium.settings\\apks\\settings_apk-debug.apk .\\bin\\settings_apk-debug.apk",
    "electron:prebuild:mac": "./copy-bin",
    "electron:build:win": "npm run electron:prebuild:win && npm run build:react:electron:win && npm run electron:build",
    "electron:build:mac": "npm run electron:prebuild:mac && npm run build:react:electron:mac && npm run electron:build",
    "electron:publish:win": "npm run electron:prebuild:win && npm run build:react:electron:win && npm run electron:build:publish",
    "electron:publish:mac": "npm run electron:prebuild:mac && npm run build:react:electron:mac && npm run electron:build:publish"
  },
  "eslintConfig": {
    "extends": [
      "react-app",
      "react-app/jest"
    ]
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "build": {
    "appId": "com.real_time_translator.app",
    "productName": "Real time translator",
    "files": [
      "build/**/*",
      "electron/**/*",
      "package.json",
      "public/logo192.png"
    ],
    "extraResources": [
      {
        "from": "bin",
        "to": "bin"
      }
    ],
    "extends": null,
    "mac": {
      "type": "distribution",
      "icon": "public/logo512.png",
      "target": [
        {
          "target": "dmg",
          "arch": [
            "x64",
            "arm64"
          ]
        },
        {
          "target": "zip",
          "arch": [
            "x64",
            "arm64"
          ]
        }
      ],
      "publish": [
        "github"
      ]
    },
    "win": {
      "icon": "public/logo512.png",
      "publish": [
        "github"
      ]
    },
    "linux": {
      "icon": "public/logo512.png",
      "publish": [
        "github"
      ]
    },
    "directories": {
      "output": "electron-build",
      "buildResources": "assets"
    }
  },
  "devDependencies": {
    "electron-builder": "^23.6.0"
  }
}